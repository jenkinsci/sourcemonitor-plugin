<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">

	<f:entry field="summaryFilePath" title="${%SourceMonitor summary metric file path}">
		<f:textbox name="summaryFilePath" value="${instance.summaryFilePath}"/>
	</f:entry>
	<f:entry field = "detailsFilePath" title="${%SourceMonitor detailed metric file path}">
		<f:textbox name="detailsFilePath" value="${instance.detailsFilePath}"/>
	</f:entry>
	<f:entry field="maxComplexityThresholdMaximum" title="${%Max complexity maximum threshold}">
		<f:number default="10" min="0" step="1" size="10"/>
	</f:entry>
	<f:entry field="maxComplexityThresholdMinimum" title="${%Max complexity minimum threshold}">
		<f:number default="0" min="0" step="1" size="10"/>
	</f:entry>
	<f:entry field="averageComplexityThresholdMaximum" title="${%Average complexity maximum threshold}">
		<f:number default="10" min="0" step="0.1" size="10"/>
	</f:entry>
	<f:entry field="averageComplexityThresholdMinimum" title="${%Average complexity minimum threshold}">
		<f:number default="0" min="0" step="0.1" size="10"/>
	</f:entry>
	<f:entry field="commentCoverageThresholdMaximum" title="${%Comment coverage maximum threshold}">
		<f:number default="50" min="0" step="1" size="10"/>
	</f:entry>
	<f:entry field="commentCoverageThresholdMinimum" title="${%Comment coverage minimum threshold}">
		<f:number default="0" min="0" step="1" size="10"/>
	</f:entry>
    <f:entry field ="maxStatementsThresholdMaximum" title="${%Max Statements maximum threshold}">
        <f:number default="0" min="0" step="1" size="10"/>
    </f:entry>
    <f:entry field ="maxStatementsThresholdMinimum" title="${%Max Statements minimum threshold}">
		<f:number default="0" min="0" step="1" size="10"/>
	</f:entry>

</j:jelly>
